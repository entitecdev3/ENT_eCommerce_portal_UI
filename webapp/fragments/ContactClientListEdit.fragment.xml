<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Table
  
    items="{
        path: 'appView>/ClientDetails/ContactEmployees'
    }">

    <columns>
        <Column>
            <Text text="{i18n>id}" />
        </Column>
        <Column
            minScreenWidth="Tablet"
            demandPopin="true">
            <Text text="{i18n>name}" />
        </Column>
        <Column
            minScreenWidth="Tablet"
            demandPopin="true">
            <Text text="{i18n>lastName}" />
        </Column>
        <Column
            minScreenWidth="Tablet"
            demandPopin="true">
            <Text text="{i18n>phone}" />
        </Column>
        <Column>
            <Text text="{i18n>cellPhone}" />
        </Column>
        <Column>
            <Text text="{i18n>email}" />
        </Column>
    </columns>
    <items>
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier
                    text="{appView>Name}"/>
                <Input
                    value="{appView>FirstName}" />
                <Input
                value="{appView>LastName}" />
                <Input
                value="{appView>Phone1}" />
                <Input
                value="{appView>MobilePhone}" />
                <Input
                value="{appView>E_Mail}" />
               
            </cells>
        </ColumnListItem>
    </items>
</Table>
</core:FragmentDefinition>
